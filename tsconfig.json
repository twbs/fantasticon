{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2021",
    "types": ["node"]
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules",
    "lib",
    "jest.config.js",
    "src/**/__mocks__/*.ts",
    "src/**/__tests__/*.ts"
  ]
}
